# After-Meet Frontend Environment Configuration for Production

# API Base URL - pointing to AWS deployed API server
NEXT_PUBLIC_API_URL=https://www.nadun.space

# Authentication
NEXT_PUBLIC_AUTH_DOMAIN=after-meet.auth0.com
NEXT_PUBLIC_AUTH_CLIENT_ID=your-auth0-client-id

# External Service URLs (for reference)
NEXT_PUBLIC_GOOGLE_CALENDAR_SCOPE=https://www.googleapis.com/auth/calendar.readonly
NEXT_PUBLIC_LINKEDIN_SCOPE=r_liteprofile,r_emailaddress,w_member_social
NEXT_PUBLIC_FACEBOOK_SCOPE=pages_manage_posts,pages_read_engagement

# Feature Flags for Production
NEXT_PUBLIC_ENABLE_REAL_API=true
NEXT_PUBLIC_USE_VERCEL_API=false
NEXT_PUBLIC_ENABLE_WEBSOCKETS=false
NEXT_PUBLIC_DEBUG_MODE=false
